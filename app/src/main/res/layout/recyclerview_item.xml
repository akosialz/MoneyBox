<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="26dp"
        android:layout_marginRight="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_icon"
        android:text="Title:"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="26dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_text1"
        android:layout_toRightOf="@id/item_icon"
        android:text="Description:"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="45dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_text2"
        android:layout_toRightOf="@id/item_icon"
        android:text="Target Amount:"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="64dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_text3"
        android:layout_toRightOf="@id/item_icon"
        android:text="Date Created:"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="83dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_text1"
        android:textSize="12sp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_toRightOf="@id/item_text2"
        android:textSize="12sp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/item_target_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_description"
        android:layout_toRightOf="@id/item_text3"
        android:textSize="12sp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/item_date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_target_amount"
        android:layout_toRightOf="@id/item_text4"
        android:textSize="12sp"
        android:layout_marginLeft="3dp"/>
</RelativeLayout>